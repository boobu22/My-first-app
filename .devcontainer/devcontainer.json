{
  "name": "DevOps CI/CD Base",
  "image": "ubuntu:22.04",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "features": {},
  "postCreateCommand": "sudo apt update && sudo apt install -y curl wget unzip git vim",
  "remoteUser": "vscode",
  "forwardPorts": [8080, 8081],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.java"
      ]
    }
  }
}
