{
  "name": "DevOps CI/CD Environment",
  "image": "ubuntu:22.04",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "redhat.java",
        "vscjava.vscode-maven"
      ]
    }
  },
  "forwardPorts": [8080, 8081, 9000],
  "portsAttributes": {
    "8080": {
      "label": "Jenkins/Application",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "Nexus Repository",
      "onAutoForward": "notify"
    },
    "9000": {
      "label": "Additional Services",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "echo 'âœ… Clean Ubuntu 22.04 Codespace ready for manual DevOps setup!'",
  "remoteUser": "vscode"
}
